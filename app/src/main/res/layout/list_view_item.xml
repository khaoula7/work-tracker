<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="Project Name"
            android:layout_marginBottom="16dp"
            android:paddingTop="8dp"/>
        <TextView
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="Category Name"
            android:paddingBottom="8dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/play_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:contentDescription="Play circle_outline_black"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/monthly_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="45:00"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="56dp" />
    <TextView
        android:id="@+id/weekly_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="15:00"
        android:layout_toLeftOf="@id/monthly_time"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"/>
    <TextView
        android:id="@+id/today_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="5:00"
        android:layout_toLeftOf="@id/weekly_time"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"/>
</RelativeLayout>